<h1>Tshirt list</h1>

<table class="records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Month</th>
            <th>Year</th>
            <th>Title</th>
            <th>Description</th>
            <th>Logo</th>
            <th>Fabric</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('admin_tshirt_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.month }}</td>
            <td>{{ entity.year }}</td>
            <td>{{ entity.title }}</td>
            <td>{{ entity.description }}</td>
            <td><img src="{{ asset(entity.logoWebPath) }}" alt="Logo" style="height: 30px;" /></td>
            <td><img src="{{ asset(entity.fabricWebPath) }}" alt="Fabric" style="height: 30px;" /></td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('admin_tshirt_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('admin_tshirt_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('admin_tshirt_new') }}">
            Create a new entry
        </a>
    </li>
</ul>
