<h1>Tshirt</h1>

<table class="record_properties">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Month</th>
            <td>{{ entity.month }}</td>
        </tr>
        <tr>
            <th>Year</th>
            <td>{{ entity.year }}</td>
        </tr>
        <tr>
            <th>Title</th>
            <td>{{ entity.title }}</td>
        </tr>
        <tr>
            <th>Description</th>
            <td>{{ entity.description }}</td>
        </tr>
        <tr>
            <th>Logo</th>
            <td><img src="{{ asset(entity.logoWebPath) }}" alt="Logo" /></td>
        </tr>
        <tr>
            <th>Fabric</th>
            <td><img src="{{ asset(entity.fabricWebPath) }}" alt="Fabric" /></td>
        </tr>
    </tbody>
</table>

<ul class="record_actions">
    <li>
        <a href="{{ path('admin_tshirt') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('admin_tshirt_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>
        <form action="{{ path('admin_tshirt_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
